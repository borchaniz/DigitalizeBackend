{% extends 'base.html.twig' %}
{% block head %}
    <meta charset="UTF-8">
    {% block title %}Digitalize{% endblock %}
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('css/index.css') }}">
    {% endblock %}
    <link rel="shortcut icon" href="img/logo.png"/>
    <link rel="icon" type="image/x-icon" href="{{ asset('img/logo.png') }}" />
{% endblock %}


{% block body %}
<div class="navbar navbar-inverse navbar-fixed-top opaque-navbar">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navMain">
                <span class="glyphicon glyphicon-menu-hamburger" style="color:white;" ></span>
            </button>
            <button type="button" class="navbar-toggle" onclick="on()">
                <i class="fa fa-user" aria-hidden="true" style="color:white;"></i>
            </button>
            <a class="navbar-brand" href="#"><img src="img/digitalize international1.png" height="200%"
                                                  style="margin-top:0px; position:relative; top:-30%"></a>
        </div>
        <div class="collapse navbar-collapse" id="navMain" style="margin-top:0.3%">
            <ul class="nav navbar-nav pull-right drop">
                <li><a href="#acc">Accueil</a></li>
                <li><a href="#about">A propos</a></li>
                <li><a href="#services">Nos Services</a></li>
                <li><a href="#carriere">Carrière</a></li>
                <li><a href="#contact">Contact</a></li>
                <li ><a onclick="on()"><i id="signbig" class="fa fa-user" aria-hidden="true"></i></a></li>
            </ul>
        </div>

    </div>

</div>
<header>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>


        <div class="carousel-inner">
            <div class="item active">
                <img src="img/img1.jpg" alt="image1" style="width:100%;">
            </div>

            <div class="item">
                <img src="img/img2.jpg" alt="image2" style="width:100%;">
            </div>

            <div class="item">
                <img src="img/img3.jpg" alt="image3" style="width:100%;">
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>
<section id="acc">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-7">
                <center>
                    <h1 style="font-size:300%;"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> &nbsp;Accueil
                    </h1>
                    <h3>Digitalize International se spécialise dans le développement sur mesure de solutions digitales
                        multicanales, ventes et services en ligne, solutions métier, conseil et accompagnement.</h3><br>
                </center>
            </div>
            <div class="col-xs-12 col-sm-5">
                <img src="img/acc.png" width="100%">
            </div>
        </div>
    </div>
</section>
<section class="parallax" id="about">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-4">
                <h1><span class="glyphicon glyphicon-info-sign  " aria-hidden="true"></span> &nbsp;A propos </h1>
            </div>
            <div class="col-xs-12 col-sm-8">
                <h3>Digitalize International est une entreprise de conseil et d'ingénierie de service informatique qui
                    opère dans le secteur de la digitalisation afin de vous accompagner et garantir votre réussite dans
                    la transformation digitale</h3>
            </div>
        </div>
    </div>
</section>
<section id="services">
    <div class="container">
        <div class="row">
            <center>
                <h1 style="font-size:300%;"><span class="glyphicon glyphicon-send" aria-hidden="true"></span> Nos
                    services </h1>
            </center>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <center>
                    <h1>CONSEIL<br></h1><i class="fa fa-handshake-o" aria-hidden="true"
                                           style="font-size:600%; color:#0080db;"></i> <br>
                    <h3>Avec l’aide de nos experts vous améliorez votre fonctionnement et vos performances grâce à la
                        mise en place d’une stratégie adaptée et des conseillers spécialisés.</h3>
                </center>
            </div>
            <div class="col-xs-12 col-sm-6">
                <center>
                    <h1>DEVELOPPEMENT</h1>
                    <i class="fa fa-code" aria-hidden="true" style="font-size:600%; color:#0080db;"></i>
                    <h3> Digitalize International se spécialise dans le développement sur mesure de solutions digitales
                        multicanales, ventes et services en ligne, solutions métier et conseil et accompagnement.</h3>
                </center>
            </div>
        </div>
    </div>
</section>
<section class="parallax" id="carriere">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-4">
                <h1><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> &nbsp; Carrière </h1>
            </div>
            <div class="col-xs-12 col-sm-8">
                <h3>Dans cette partie nous posterons des offres d’emploi selon le besoin de l’entreprise ou des
                    clients. </h3>
            </div>
        </div>
    </div>
</section>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-4">
                <h1><span class="glyphicon glyphicon-user" aria-hidden="true"></span> &nbsp; Contact </h1>
            </div>
            <div class="col-xs-12 col-sm-8">
                <table style="width:100%">
                    <tr>
                        <td style="font-size:120%"><i class="fa fa-map-marker" aria-hidden="true"></i></td>
                        <td style="font-size:120%">&emsp;<a href="#map">Adresse : pépinière des entreprises « Rades
                            Technologie Plus » bureau n° 6.</a><br></td>
                    </tr>
                    <tr>
                        <td style="font-size:120%"><i class="fa fa-envelope-o" aria-hidden="true"></i></td>
                        <td style="font-size:120%">&emsp; <a href="mailto:contact@digitalize.tn">Adresse mail :
                            contact@digitalize.tn</a><br></td>
                    </tr>
                    <tr>
                        <td style="font-size:120%"><i class="fa fa-facebook"></i></td>
                        <td style="font-size:120%">&emsp;<a href="https://www.facebook.com/digitalize.tn">Facebook :
                            https://www.facebook.com/digitalize.tn</a><br></td>
                    </tr>
                    <tr>
                        <td style="font-size:120%"><i class="fa fa-twitter" aria-hidden="true"></i></td>
                        <td style="font-size:120%">&emsp; <a href="https://twitter.com/DigitalizeTn">Twitter :
                            https://twitter.com/DigitalizeTn</a><br></td>
                    </tr>
                    <tr>
                        <td style="font-size:120%"><i class="fa fa-instagram" aria-hidden="true"></i></td>
                        <td style="font-size:120%">&emsp;<a href="https://www.instagram.com/digitalize.tn">Instagram :
                            https://www.instagram.com/digitalize.tn/</a><br></td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
</section>
<section id="map"></section>
<section id="world">
    <div class="container">
        <div class="row">
            <div class="col-xs-8">
                <center><i class="fa fa-globe" aria-hidden="true" style="font-size:600%; color:#0080db;"></i></center>
                <center>
                    <h3>Pour assurer sa splendeur dans toutes les régions, Digitalize travaille sur l'implémentation de
                        ses bureaux dans divers pays. Nos clients occupent les quatres coins du monde et nous sommes
                        ravis d'accueillir aussi bien les clients étrangers que les clients de Tunis.</h3>
                </center>

            </div>
        </div>
    </div>

</section>
<img src="img/foot.png" width="100%" style="margin-top: -100px;">
<footer>
    <div class="row">
        <div class="col-sm-4 col-xs-12"></div>
        <div class="col-sm-4 col-xs-12">

            <form>
                <div class="form-group">
                    <input type="text" class="form-control" id="sub" placeholder="sujet">
                </div>
                <div class="form-group">
                    <textarea rows="4" class="form-control" id="mail" placeholder="Mail"></textarea>
                </div>
                <button type="submit" class="btn btn-default">Envoyer</button>
            </form>
        </div>

        <div class="col-xs-12 col-sm-4"></div>
    </div>
    <div class="container">
        <div id="line"><span class="line"></span></div>
        <center><a href="https://www.facebook.com/digitalize.tn"><i class="fa fa-facebook footi"></i></a>
            <a href="https://twitter.com/DigitalizeTn"><i class="fa fa-twitter footi" aria-hidden="true"></i></a>
            <a href="https://www.instagram.com/digitalize.tn"><i class="fa fa-instagram footi"
                                                                 aria-hidden="true"></i></a></center>
    </div>
</footer>
<div id="overlay">
    <div><center>
        <div id="sign">
            <form action="{{ path('login') }}" method="POST">
                <i class="fa fa-user" aria-hidden="true" style="color: white; font-size: 1000%; margin-bottom: 10%"></i>
                <div class="form-group">
                    <input name="email" type="email" class="form-control" id="email" placeholder="e-mail" >
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="pass" placeholder="Mot De Passe" name="password">
                </div>
                <h3 style="margin-top: -10px; color: white;"><input type="checkbox" value="true" name="remember"> Se rappeler de moi</h3>
                <button type="submit" class="btn btn-default fbutton">Se Connecter</button>
                <a href="{{ path('addUser') }}" class="btn btn-default fbutton">Créer un compte</a>
                <button class="btn btn-default fbutton" onclick="off()" type="reset">Annuler</button>
            </form>
        </div>
    </center></div>
</div>
    <script src="js/map.js"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBceaaLI0ce4lQqdVTNRxe6xsqH1ymPkDw&callback=initMap"></script>
{% endblock %}
